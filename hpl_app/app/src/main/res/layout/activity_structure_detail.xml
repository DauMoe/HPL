<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/struc_detail_name"
        android:text="Structure Name"
        android:textSize="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/struc_detail_eng"
        android:text="Structure Eng"
        android:textSize="16dp"
        android:paddingBottom="15dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/struc_detail_exam"
        android:text="Structure Name"
        android:paddingTop="10dp"
        android:paddingBottom="15dp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/go_back_search"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:textAllCaps="false"
        android:backgroundTint="#E14C41"
        />
</LinearLayout>